<div class="container">
  <h1>My Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <div class="flex">
        <li class="list"><input type="checkbox" <%= "checked" if task.completed %>><%= link_to task.title, task_path(task) %></li>
        <%= link_to  task_path(task), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    <% end %>
  </ul>
  <div class="btn btn-warning">
    <%= link_to 'Add a new task', new_task_path %>
  </div>
</div>
