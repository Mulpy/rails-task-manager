<div class="container">
  <h1><%= @task.title %></h1>
  <div class="gray">
    <p><%= @task.details %></p>
  </div>
  <% if @task.completed %>
    <div class="d-flex">
      <input type="checkbox" checked>
      <p>This task is completed</p>
      <%= link_to task_path(@task), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    </div>
  <% else %>
    <div class="d-flex">
      <input type="checkbox">
      <p>This task has not been completed yet</p>
      <%= link_to task_path(@task), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    </div>
  <% end %>
  <div class='btn btn-warning'>
    <%= link_to 'View all tasks', tasks_path %>
  </div>
  <div class='btn btn-light'>
    <%= link_to 'Update Task', edit_task_path  %>
  </div>
</div>
